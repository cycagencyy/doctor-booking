# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package.json
[package.json]
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Batch files
[*.bat]
end_of_line = crlf

# PowerShell files
[*.ps1]
end_of_line = crlf

